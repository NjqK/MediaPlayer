<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/toolabar_color"
    android:layout_gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/lay1"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/topbar_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_menu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_myMusic_1"
            android:text="@string/MyMusic"
            android:textColor="@color/Active"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_myMusic_2"
            android:text="@string/OnlineMusic"
            android:textColor="@color/notActive"/>

        <ImageView
            android:id="@+id/topbar_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/actionbar_search" />

    </LinearLayout>

</LinearLayout>